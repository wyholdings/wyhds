{# views/admin/layout/base.html.twig #}
<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="UTF-8">
    <title>{% block title %}관리자 페이지{% endblock %}</title>
    <link href="/assets/admin/css/admin.css" rel="stylesheet">
    <link href="/assets/admin/css/all.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    {% block styles %}{% endblock %}
</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">

        {% include 'admin/layout/sidebar.html.twig' %}

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                {% include 'admin/layout/topbar.html.twig' %}

                <!-- Page Content -->
                <div class="container-fluid">
                    {% block content %}{% endblock %}
                </div>
            </div>

        </div>
    </div>

    <!-- JS -->
    <!-- Bootstrap core JavaScript-->
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/assets/js/jquery.easing.min.js"></script>

    <!-- Page level plugins -->
    <script src="/assets/js/Chart.min.js"></script>
    <script src="/assets/admin/js/admin.js"></script>

    {% block scripts %}{% endblock %}
</body>

</html>
