{% extends 'admin/layout/base.html.twig' %}

{% block content %}
<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0 text-gray-800">접속 로그</h1>
    <a href="/admin/visitor/logs" class="btn btn-sm btn-outline-secondary">새로고침</a>
</div>

<p class="text-muted mb-3">총 {{ total }}건 ({{ page }}/{{ total_pages }} 페이지)</p>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped mb-0">
                <thead class="thead-light">
                    <tr>
                        <th style="width: 90px;">ID</th>
                        <th style="width: 160px;">시간</th>
                        <th>페이지</th>
                        <th style="width: 120px;">체류(초)</th>
                        <th style="width: 160px;">IP</th>
                        <th>Referer</th>
                        <th>UA</th>
                    </tr>
                </thead>
                <tbody>
                    {% for log in logs %}
                        <tr>
                            <td>{{ log.id }}</td>
                            <td>{{ log.visited_at|date('Y-m-d H:i:s') }}</td>
                            <td class="small">
                                <code>{{ log.path }}{% if log.query_string %}?{{ log.query_string }}{% endif %}</code>
                            </td>
                            <td>{{ log.duration_seconds ?? '-' }}</td>
                            <td class="small">{{ log.ip ?? '' }}</td>
                            <td class="small text-muted">{{ log.referer ?? '' }}</td>
                            <td class="small text-muted">{{ log.user_agent ?? '' }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center text-muted p-4">로그가 없습니다.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% if total_pages > 1 %}
    <nav aria-label="pagination" class="mt-3">
        <ul class="pagination">
            {% set prev = page - 1 %}
            {% set next = page + 1 %}
            <li class="page-item {{ page == 1 ? 'disabled' : '' }}">
                <a class="page-link" href="/admin/visitor/logs?page={{ prev }}">이전</a>
            </li>
            {% for p in 1..total_pages %}
                {% if p == page or (p <= 3) or (p > total_pages-3) or (p >= page-2 and p <= page+2) %}
                    <li class="page-item {{ p == page ? 'active' : '' }}">
                        <a class="page-link" href="/admin/visitor/logs?page={{ p }}">{{ p }}</a>
                    </li>
                {% elseif loop.index0 == 3 or loop.index0 == total_pages-3 %}
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                {% endif %}
            {% endfor %}
            <li class="page-item {{ page == total_pages ? 'disabled' : '' }}">
                <a class="page-link" href="/admin/visitor/logs?page={{ next }}">다음</a>
            </li>
        </ul>
    </nav>
{% endif %}
{% endblock %}
