{% extends 'admin/layout/base.html.twig' %}

{% block content %}
<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0 text-gray-800">접속 로그</h1>
    <a href="/admin/visitor/logs{% if keyword %}?q={{ keyword|url_encode }}{% if show_all %}&show_all=1{% endif %}{% elseif show_all %}?show_all=1{% endif %}" class="btn btn-sm btn-outline-secondary">새로고침</a>
</div>

<form class="form-inline mb-3" method="get" action="/admin/visitor/logs">
    <div class="input-group" style="max-width: 420px;">
        <input type="text" class="form-control" name="q" placeholder="페이지/Referer/IP/UA 검색" value="{{ keyword|default('') }}">
        <div class="input-group-append">
            <button class="btn btn-primary" type="submit">검색</button>
        </div>
    </div>
    <div class="custom-control custom-checkbox ml-3">
        <input type="checkbox" class="custom-control-input" id="showAll" name="show_all" value="1" {% if show_all %}checked{% endif %}>
        <label class="custom-control-label" for="showAll">전체보기</label>
    </div>
    {% if keyword %}
        <a class="btn btn-sm btn-outline-secondary ml-2" href="/admin/visitor/logs{% if show_all %}?show_all=1{% endif %}">초기화</a>
    {% elseif show_all %}
        <a class="btn btn-sm btn-outline-secondary ml-2" href="/admin/visitor/logs">초기화</a>
    {% endif %}
</form>

<p class="text-muted mb-3">총 {{ total }}건 ({{ page }}/{{ total_pages }} 페이지)</p>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped mb-0" style="table-layout: fixed;">
                <thead class="thead-light">
                    <tr>
                        <th style="width: 90px;">ID</th>
                        <th style="width: 160px;">시간</th>
                        <th style="width: 80px;">상태</th>
                        <th>페이지</th>
                        <th style="width: 120px;">체류(초)</th>
                        <th style="width: 160px;">IP</th>
                        <th>Referer</th>
                        <th>UA</th>
                    </tr>
                </thead>
                <tbody>
                    {% for log in logs %}
                        <tr>
                            <td>{{ log.id }}</td>
                            <td>{{ log.visited_at|date('Y-m-d H:i:s') }}</td>
                            <td>{{ log.status_code ?? '-' }}</td>
                            <td class="small">
                                <code>{{ log.path }}{% if log.query_string %}?{{ log.query_string }}{% endif %}</code>
                            </td>
                            <td>{{ log.duration_seconds ?? '-' }}</td>
                            <td class="small">{{ log.ip ?? '' }}</td>
                            <td class="small text-muted text-truncate" style="max-width: 260px;">{{ log.referer ?? '' }}</td>
                            <td class="small text-muted text-truncate" style="max-width: 320px;">{{ log.user_agent ?? '' }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center text-muted p-4">로그가 없습니다.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% if total_pages > 1 %}
    <nav aria-label="pagination" class="mt-3">
        <ul class="pagination">
            {% set prev = page - 1 %}
            {% set next = page + 1 %}
            <li class="page-item {{ page == 1 ? 'disabled' : '' }}">
                <a class="page-link" href="/admin/visitor/logs?page={{ prev }}{% if keyword %}&q={{ keyword|url_encode }}{% endif %}{% if show_all %}&show_all=1{% endif %}">이전</a>
            </li>
            {% for p in 1..total_pages %}
                {% if p == page or (p <= 3) or (p > total_pages-3) or (p >= page-2 and p <= page+2) %}
                    <li class="page-item {{ p == page ? 'active' : '' }}">
                        <a class="page-link" href="/admin/visitor/logs?page={{ p }}{% if keyword %}&q={{ keyword|url_encode }}{% endif %}{% if show_all %}&show_all=1{% endif %}">{{ p }}</a>
                    </li>
                {% elseif loop.index0 == 3 or loop.index0 == total_pages-3 %}
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                {% endif %}
            {% endfor %}
            <li class="page-item {{ page == total_pages ? 'disabled' : '' }}">
                <a class="page-link" href="/admin/visitor/logs?page={{ next }}{% if keyword %}&q={{ keyword|url_encode }}{% endif %}{% if show_all %}&show_all=1{% endif %}">다음</a>
            </li>
        </ul>
    </nav>
{% endif %}
{% endblock %}
