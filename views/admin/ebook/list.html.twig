{% extends 'admin/layout/base.html.twig' %}

{% block content %}
<h1>문의 목록</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>파일 이름</th>
            <th>폴더 이름</th>
            <th>등록일</th>
            <th>관리</th>
        </tr>
    </thead>
    <tbody>
        {% for inquiry in inquiries %}
        <tr>
            <td>{{ ebooks.id }}</td>
            <td>{{ ebooks.company }}</td>
            <td>{{ ebooks.name }}</td>
            <td>{{ ebooks.email }}</td>
            <td>{{ ebooks.created_at|date('Y-m-d') }}</td>
            <td>
                <a href="/admin/ebook/{{ ebooks.id }}/download" class="btn btn-sm btn-danger">다운로드</a>
            </td>
        </tr>
        {% else %}
        <tr><td colspan="6">등록된 E-BOOK이 없습니다.</td></tr>
        {% endfor %}
    </tbody>
</table>

<form method="POST" enctype="multipart/form-data" action="/admin/ebook/upload">
    <label>eBook PDF 파일 업로드:</label><br>
    <input type="file" name="pdf" accept="application/pdf" required>
    <button type="submit">변환 및 다운로드</button>
</form>
{% endblock %}
