{% extends 'admin/layout/base.html.twig' %}

{% block content %}
<h1>업체 목록</h1>

<a href="/admin/company/add" class="btn btn-primary mb-3">+ 업체 등록</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>업체명</th>
            <th>담당자</th>
            <th>연락처</th>
            <th>등록일</th>
            <th>상태</th>
            <th>관리</th>
        </tr>
    </thead>
    <tbody>
        {% for company in companies %}
        <tr>
            <td>{{ company.id }}</td>
            <td>{{ company.name }}</td>
            <td>{{ company.manager }}</td>
            <td>{{ company.phone }}</td>
            <td>{{ company.created_at|date('Y-m-d') }}</td>
            <td>{{ company.status }}</td>
            <td>
                <a href="/admin/company/{{ company.id }}/view" class="btn btn-sm btn-info">보기</a>
                <a href="/admin/company/{{ company.id }}/edit" class="btn btn-sm btn-warning">수정</a>
                <a href="/admin/company/{{ company.id }}/delete" class="btn btn-sm btn-danger" onclick="return confirm('삭제할까요?')">삭제</a>
            </td>
        </tr>
        {% else %}
        <tr><td colspan="7">등록된 업체가 없습니다.</td></tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
